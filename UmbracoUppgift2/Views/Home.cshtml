@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}


@{
var image = Model.Value<IPublishedContent>("background"); 
}

<!-- Header Starts -->

        <div class="justify-content-center">
            <img class="img-fluid" src="@image.Url()" width="100%">
            <div class="centered">
                <div class="title">@Model.Value("backgroundText")</div>
                <div class="sub-title">@Model.Value("backgroundSub")</div>
            </div>
        </div> 
      <!-- Header Ends -->
      <!-- Selected projects Starts -->
 
      <section class="selected container">
          <h1 class="p-5">Selected Projects</h1>
          <div class="row mb-5">
        @{
        	var selectedProjects = Umbraco.Content(1088)
            .Descendants()
            .Where(x => x.IsVisible() && (x.IsDocumentType("HomeDesignArticle") || x.IsDocumentType("OfficeDesignArticle") || x.IsDocumentType("ShopDesignArticle")))
            .OrderBy(t => Guid.NewGuid()).Take(3);
        }
       
        	@foreach (var project in selectedProjects)
        	{
         	   var pic =  project.Value<IPublishedContent>("articleImage");
         	   
        		<div class="col-4">
                    <div class="card"  >
                        <img src="@pic.Url()" class="card-img-top" height="300px">
                        <div class="card-body">
                        <h3 class="">@project.Value("articleTitle")</h3>
                        <p class="">@project.Value("articleSubtitle")</p>
                        <a  class="btn btn-light"  href="@project.Url()">Read more</a>
                        </div>
                    </div>
                </div>   
        		
        	
        	}
        	

           
      </section>
      <!-- Selected projects Ends -->
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
}

@* the fun starts here *@

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Style.css">
    <script src="https://kit.fontawesome.com/1f9a43c278.js" crossorigin="anonymous"></script>
    <title>InteriorDesign</title>
  </head>
  <body>
      <!-- Navbar Starts -->
      <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
          <img src="/media/00301-Interior-01.png" height="60px">
          
          <div class="collapse navbar-collapse ms-3" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-3 mb-lg-0">
              <li class="nav-item m-2">
                <a class="nav-link active" aria-current="page" href="@Umbraco.Content("c212b239-8658-4ff5-a932-92628a28344a").Url()">Home</a>
              </li>
              
              <li class="nav-item dropdown m-2">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Projects
                </a>
                
                
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  
                  
                    @{
                    	var menu = Umbraco.Content(1088)
                        .Children()
                        .Where(x => x.IsVisible())
                        .OrderBy(x => x.Name);
                    }
                    
                    	@foreach (var item in menu)
                    	{
                    	 <a class="dropdown-item" href="@item.Url()">@item.Name()</a>
                    	}

                </div>
              </li>
              <li class="nav-item m-2">
                <a class="nav-link" href="@Umbraco.Content("9cc94a98-b394-4220-a135-09e05a9220ae").Url()">About Us</a>
              </li>
              <li class="nav-item m-2">
                <a class="nav-link" href="@Umbraco.Content("3a27febf-ce2a-487d-a643-60c51f40707b").Url()">Contact Us</a>
              </li>
              <li class="nav-item dropdown m-2">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-globe-americas"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                     @foreach (var (culture, infos) in Model.Cultures)
                        {
                          
                                <a  class="dropdown-item" href="@Model.Url(culture)">
                                @culture.ToString()
                                @Umbraco.GetDictionaryValue("Settings/Languages/" + culture)
                              </a>
                          
                        }
                </div>
                  
                       
              
              </li>
            </ul>
            
           
 
            <div class="d-flex">
                @Html.Partial("LoginStatusPartial")
            </div>
            </div>
          </div>
        </div>
      </nav>
      
      
      <!-- Navbar Ends -->
      
      @RenderBody()
      
      

      <!-- Footer starts -->
       
    <footer class="footer">
        <div class="container d-flex  justify-content-between p-3">
            <div class="d-flex">
                <img src="/media/00301-Interior-01.png" height="50px">
                <div class="footer-copyright text-center pt-3 text-light ms-3">© 2021 Copyright: N.k
                </div>

            </div>
            <div class="d-flex align-center">
                <a href="" class="dot"><i class="fab fa-facebook-f text-light"></i></a>
                <a href="" class="dot blue"><i class="fab fa-twitter text-light"></i></a>
                <a href="" class="dot pink"> <i class="fab fa-instagram text-light"></i></a> 
            </div>
        </div>
    </footer>
  
      <!-- Footer Ends -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

 
  </body>
</html>

